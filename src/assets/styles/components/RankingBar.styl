.rankingBar__container
  display flex
  justify-content flex-end
  align-items center
  width 288px
  height 50px
  margin 10px 5%
  border-radius 12px
  box-shadow 0 4px 4px #c2c2c2
  color Elegant-black

.rankingBar__bar
  width 70%
  height 5px
  margin 10px
  background #c2c2c2
  border-radius 5px
  overflow hidden
  .rankingBar__bar--percentage
    height 100%
  
.rankingBar__bar.isRating
  height 18px 
  border-radius 18px
 
.range
  -webkit-appearance: none;
  -moz-appearance: none;
  margin: 0
  width: 100%
  height: 18px
  background: linear-gradient(90deg, #c2c2c2 60%, #c2c2c2 60% )
  -webkit-transition: .2s
.range::-webkit-slider-thumb
  -webkit-appearance: none
  appearance: none
  width: 5px
  height: 18px
  border-radius 5px
  background: Letter-brown
.modal--percentage
  position absolute
  height 20px
  width 20px
  border-radius 4px
  text-align center
  font-weight: bold
  color White
  background Complementary-icon

.rankingBar__bar--rankStatus
  font-weight 500
  position absolute
  align-self flex-end
  transform translate(-10px, -3px)
