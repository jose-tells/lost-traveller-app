.UserProfileSections__userProfileButton
  display flex
  justify-content center
  align-items center
  width 85px
  height 68px
  background Elegant-black
  border-radius 12px
  box-shadow 0 6px 3px #c2c2c2
  overflow hidden
  .UserProfileSections__userProfileButton--button
    display flex
    justify-content center
    align-items center
    width 70px
    height 50px
    background none
    border none
    border-radius 12px
    outline none
    text-decoration none
    text-align center
    font-size text-size - 0.2rem
    font-family Main-font
    font-weight 300
    color White

.UserProfileSections__userProfileButton:nth-child(2)
  background Letter-orange

