// Photo-container styles
.postInfo__container
  width 100vw
  height 522px
  overflow hidden

.postInfo
  height 508px
  margin 6px 4px
  display grid
  grid-template-columns repeat(16, 1fr)
  grid-template-rows repeat(16, 1fr)
  border-radius 35px
  overflow hidden
  .postInfo__photo
    justify-self center
    grid-column 1/17
    grid-row 1/17
    height 100%

.postInfo__title
  align-self center
  grid-column 2/14
  grid-row 12/14
  color White
  h1
    font-size title-size
    font-weight 600
    margin-bottom 2px
  h2
    font-size mini-text-size
    font-weight 400

.postInfo__creator
  grid-column 2/7
  grid-row 14/16
  align-self flex-end
  overflow hidden
  .postInfo__creator--name
    font-size footer-text-size + 0.1
    font-weight 500
    color White

.postInfo__contributors
  // Flex alignment
  display flex
  flex-direction column
  align-items flex-end
  // Grid alignment
  grid-column 7/16
  grid-row 14/16
  align-self flex-end
  justify-self flex-end
  color White
  .postInfo__contributors--profiles
    display flex
  .postInfo__contributors--names
    text-align right
    font-size footer-text-size + 0.1
    font-weight 300