.menuNav__container
  width 100vw
  height 73px
  position fixed
  grid-column 1/17
  grid-row 1/3
  display flex
  flex-direction column
  justify-content flex-start
  align-items flex-start
  padding 10px
  transition all 0.5s ease-in

.menuNav__navigationBar--container
  width 100%
  display flex
  justify-content space-between
  .menuNav__logo--container
    width fit-content
    .menuNav__logo
      width 50px

.menuNav__container.isScrolled
  background White
  box-shadow 0 2px 2px rgba(0 0 0 0.1)
  .menuNav__logo--container
    filter invert(100%)
  .hamburger__container
    color Elegant-black

.menuNav__container.isOpen
  height 380px
  background White
  .menuNav__logo--container
    filter invert(100%)
  .hamburger__container
    color Elegant-black
