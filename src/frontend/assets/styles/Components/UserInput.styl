.commentsSection__contribution
  margin 10px 0 10px 10px
  display flex
  align-items flex-start
  .commentsSection__contribution--container
    display flex
    flex-direction column
    align-items flex-end
    justify-content flex-end
    width 280px
    margin-left 10px
    overflow hidden
    .commentsSection__contribution--textLimit
      position absolute
      align-self flex-end
      transform translate(-5px, -5px)

.commentsSection__contribution--form
  width 100%
  .commentsSection__contribution--userInput
    width 100%
    height 115px
    padding 5px 12px
    background #c2c2c2
    border-radius 12px
    border none
    outline none
    font-family Main-font
    font-size text-size
    color Elegant-black

.commentsSection__contribution--userInput.isForum
  height 50px
