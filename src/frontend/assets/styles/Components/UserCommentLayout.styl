.userCommentLayout__container
  display flex
  flex-direction column
  align-items center
  justify-content flex-end
  margin 2px 10px 10px 10px

.userCommentLayout__container.isForum
  width 95%

.userCommentLayout__userCommentContainer
  display flex
  align-self flex-start
  .userCommentLayout__commentContainer
    display flex
    justify-content flex-start
    align-items center
    align-self flex-start
    width 206px
    height fit-content
    margin-left 10px
    border-radius 12px
    background #c2c2c2
    overflow hidden
    .userCommentLayout__commentContainer--comment
      margin 10px
      line-height 2
      font-size mini-text-size
      font-weight 400

.userCommentLayout__responses
  width 100%
  margin-top 20px
  display flex
  flex-direction column
  align-items flex-end

.userCommentLayout__commentLink
  position absolute
  align-self flex-end
  transform translateY(-5px)
  font-size footer-text-size
  font-weight 400
  text-decoration none
  color Icon-blue