.userCommentLayout__container
  display flex
  flex-direction column
  align-items center
  justify-content flex-end
  margin 2px 10px 10px 10px

.userCommentLayout__container.isForum
  width 95%

.userCommentLayout__userCommentContainer
  display flex
  align-self flex-start
  width 100%
  .userCommentLayout__commentContainer
    display flex
    justify-content flex-start
    align-items center
    align-self flex-start
    width 206px
    height fit-content
    margin-left 10px
    border-radius 12px
    background #c2c2c2
    overflow hidden
    .userCommentLayout__commentContainer--comment
      margin 10px
      line-height 2
      font-size mini-text-size
      font-weight 400
  .userCommentLayout__deleteIcon
    margin-left 20px
    align-self center
    color #c2c2c2
    transform translateX(-50px)
    transition all 0.5s
    z-index -10

.userCommentLayout__responses
  width 100%
  margin-top 20px
  display flex
  flex-direction column
  align-items flex-end

.userCommentLayout__commentLink
  position absolute
  align-self flex-end
  transform translate(-35px, -5px)
  font-size footer-text-size
  font-weight 400
  text-decoration none
  color Icon-blue

.userCommentLayout__deleteIcon.isShow
  cursor pointer
  font-size sub-title-size
  font-weight 300
  transform translateX(0)
  z-index 0

