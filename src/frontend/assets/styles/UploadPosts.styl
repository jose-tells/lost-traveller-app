@import 'globals.styl'
@import 'vars.styl'

.uploadPost__form
  width 100vw
  overflow hidden

.uploadPostPhoto__container
  display flex
  justify-content center
  align-items center
  min-width 100%
  height 155px
  .uploadPostPhoto__photoContainer
    width 95%
    height 130px
    display flex
    justify-content center
    align-items center
    background #c2c2c2
    border-radius 20px
    overflow hidden
    .uploadPostPhoto__photoContainer--photo
      width 100%

.uploadPostPhoto__form
  position absolute
  display flex
  width fit-content
  flex-direction column
  align-items center
  background White
  border-radius 6px
  .uploadPostPhoto__form--input
    width 0.1px
    height 0.1px
    opacity 0
    overflow hidden
    position absolute
    z-index -1
  .uploadPostPhoto__form--input + label
    display inline-block
    margin 5px
    background-color White
    font-size mini-text-size
    font-weight 500
    color #c2c2c2

.uploadPostInfo__container
  width 90%
  display flex
  flex-direction column
  align-items flex-end
  gap 10px
  margin auto

.uploadPostInfo__item--container
  width 100%
  display flex
  flex-direction column
  .uploadPostInfo__item--input
    padding 5px 10px
    border 1px dashed Icon-blue
    outline none
    border-radius 20px
    font-family Main-font
    font-size text-size
    font-weight 400
    color Elegant-black
  .uploadPostInfo__item--input::placeholder
    font-size mini-text-size
    font-weight 300
    opacity 0.6
    color #c2c2c2
  .uploadPostInfo__item--label
    margin-right 10px
    font-size text-size
    font-weight 300
    color Complementary-icon
  .uploadPostInfo__item--title
    margin 10px 0
    font-size sub-title-size
    font-weight 600
    color Elegant-black

.postTextInput__container
  display flex
  flex-direction column
  align-items center
  justify-content center
  margin auto
  width 90%
  height 224px
  border 1px dashed Icon-blue
  border-radius 20px
  margin-top 20px
  overflow hidden
  .postTextInput__form
    width 100%
    height 100%
    padding 0 10px
    .postTextInput__form--input
      width 100%
      height 100%
      border none
      outline none
      font-family Main-font
      font-size text-size
      line-height 2
      color Elegant-black
    .postTextInput__form--input::placeholder
      font-weight 300
      opacity 0.6
      color #c2c2c2
  .postTextInput__characters
    align-self flex-end
    margin 5px 10px 0 0
    color Icon-blue

.uploadPost__review--container
  width 90%
  display flex
  margin 10px auto
  justify-content flex-start
  align-items center
  transition 0.5s
  .uploadPost__review--text
    text-decoration none
    text-align center
    font-size mini-text-size
    color #c2c2c2
    z-index 0

.uploadPost__review--text.showReview
  text-decoration underline
  color Complementary-icon
  z-index 20

.uploadPost__review--container::before
  content ''
  width 90%
  height 20px
  position absolute
  background transparent
  z-index 10

.submitPostButton__button
  width 144px
  height 42px
  display flex
  justify-content center
  align-items center
  margin 20px auto
  border-radius 20px
  border none
  background Complementary-icon
  border-radius 20px
  font-family Main-font
  font-size text-size
  font-weight 300
  color White
