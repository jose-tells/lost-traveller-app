@import './globals'
@import './vars'

.sign-up-container
    display: flex;
    flex-direction: column
    // justify-content: center
    height: 100vh;
    width: 100vw;
    overflow-x: hidden;
    // border: 2px solid red;
.inputsData-container
    align-self center
    display: grid
    grid-template-rows: repeat(7, 1fr)
    justify-content: center 
    grid-gap: .9em
    width: 90vw
    margin-top: 15vh 
    color: White
    // border: solid red
    z-index:300;
.inputs-text
    width: 75vw
    background: none
    padding: .5em
    outline none
    border: 1px solid White;
    border-radius: 1em
.register__buttom
    width: 40vw
    justify-self: center
    background:Letter-orange ;
    color: White
    border:none;
    border-radius: 2em
    font-weight: 200
    font-size: 1.4rem;
.question-text__container
    display: flex
    flex-direction: column
.question__text
    justify-self: center;
    align-self center
    font-weight: 300;
    font-size: 1.6rem;
    line-height: 1em;
    text-align: center;
.signIn__link
    justify-self: center;
    align-self center
    text-decoration: none;
    color: Button-blue
    font-weight: 300;
    font-size: 1.6rem;
    line-height: 1em;
    text-align: center;
    z-index 500
